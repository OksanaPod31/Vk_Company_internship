@model VkUsers.Application.Users.Queries.GetUserList.GetListVm;



<div>
    <form method="POST" asp-controller="User" asp-action="Create" enctype="multipart/form-data">
        <h2>Регистрация</h2>
        <div class="formItems">
            <div class="Inlines">
                <div class="leftSide">
                    <div class="Item">
                        <label>Логин</label>
                        <input asp-for="@Model.CreateUser.login" type="text" />
                    </div>
                    <div class="Item">
                        <label>Пароль</label>
                        <input asp-for="@Model.CreateUser.password"></input>
                    </div>
                    
                </div>

                <div class="rightSide">
                    <div class="Item">
                        <label>Группа</label>
                        <select asp-for="@Model.CreateUser.groupId">
                            @{
                                foreach (var dep in Model.Groups)
                                {
                                    <option value="@dep.id">@dep.code</option>
                                }
                            }
                        </select>

                    </div>

                </div>
            </div>
            <div class="Blocked">
                <div class="ItemBlock BlockButt">

                    <div>
                        <button class="createbtn"><input type="submit" /></button>


                    </div>
                </div>
            </div>
    </form>

</div>

